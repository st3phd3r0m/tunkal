<!-- Button trigger modal -->
<button class="btn btn-danger" data-toggle="modal" data-target="#deleteShow{{ show.id }}ModalCenter">
  <i class="fas fa-trash"></i>
</button>

<!-- Modal -->
<div class="modal fade" id="deleteShow{{ show.id }}ModalCenter" tabindex="-1" role="dialog" aria-labelledby="deleteShow{{ show.id }}ModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteShow{{ show.id }}ModalLongTitle">Suppression du concert <span class="font-italic">{{ show.title }}</span></h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                La suppression du concert <span class="font-italic">{{ show.title }}</span> sera irr√©versible.
                Voulez-vous vraiment supprimer cet item ?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Annuler</button>
                <form method="post" action="{{ path('shows_delete', {'id': show.id}) }}">
                    <input type="hidden" name="_method" value="DELETE">
                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ show.id) }}">
                    <button class="btn btn-danger">Supprimer</button>
                </form>
            </div>
        </div>
    </div>
</div>