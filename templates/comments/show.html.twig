{% extends 'base-admin.html.twig' %}

{% block title %}Commentaire
	{{ comment.pseudo }}
	le
	{{ comment.sentAt|date('d-m-Y H:i:s') }}
{% endblock %}

{% block body %}
	<!-- Content Header (Page header) -->
	<div class="content-header">
		<div class="container-fluid">
			<div class="row mb-2">
				<div class="col-sm-6">
					<h1 class="m-0 text-dark">Commentaire {{ comment.pseudo }} le {{ comment.sentAt|date('d-m-Y H:i:s') }}</h1>
				</div>
				<!-- /.col -->
				<div class="col-sm-6">
					<ol class="breadcrumb float-sm-right">
						<li class="breadcrumb-item">
							<a href="{{ path('admin') }}">Dashboard</a>
						</li>
						<li class="breadcrumb-item active">Avis clients</li>
					</ol>
				</div>
				<!-- /.col -->
			</div>
			<!-- /.row -->
		</div>
		<!-- /.container-fluid -->
	</div>
	<!-- /.content-header -->

	<!-- Main content -->
	<div class="content">
		<div class="container-fluid">

			<table class="table">
				<tbody>
					<tr>
						<th>Pseudo</th>
						<td>{{ comment.pseudo }}</td>
					</tr>
					<tr>
						<th>Ecrit le</th>
						<td>{{ comment.sentAt|date('d-m-Y H:i:s') }}</td>
					</tr>
					<tr>
						<th>Concernant l'article</th>
						<td>
							{% if comment.post != null %}
								<a title="Voir l'article associée" href="{{ path('posts_show', {id:comment.post.id}) }}">{{ comment.post.title }}</a>
							{% else %}
								Commentaire associé à aucun article
							{% endif %}
						</td>
					</tr>
					<tr>
						<th>Contenu</th>
						<td>{{ comment.content }}</td>
					</tr>
				</tbody>
			</table>

			<a href="{{ path('comments_index') }}" class="btn btn-primary" >Retour à la liste</a>

			<a href="{{ path('comments_edit', {'id': comment.id}) }}" class="btn btn-warning">Modérer</a>

			{{ include('comments/_delete_form.html.twig') }}
		</div>
	</div>
{% endblock %}
